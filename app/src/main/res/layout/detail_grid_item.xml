<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/mycollection_item_iv1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/mycollection_item_tv1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mycollection_item_iv1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="123 "
                android:textSize="13sp" />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/mycollection_item_newprice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mycollection_item_iv1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="50dp"
                android:text="¥41"
                android:textColor="#f24e30"
                android:textSize="14sp" />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/mycollection_item_oldprice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mycollection_item_iv1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="53dp"
                android:layout_toRightOf="@id/mycollection_item_newprice1"
                android:text="¥54.40"
                android:textSize="12sp" />


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
