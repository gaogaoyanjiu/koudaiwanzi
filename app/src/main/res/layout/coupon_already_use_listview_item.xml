<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/coupon_already_use_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:src="@mipmap/yishiyong"/>

    <TextView
        android:id="@+id/coupon_count_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="35sp"
        android:textColor="#f1c2bc"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/tv_name_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全类商品"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:layout_marginTop="33dp"/>

    <TextView
        android:id="@+id/enough_money_can_use_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="满200元可用"
        android:layout_alignParentRight="true"
        android:layout_marginRight="33dp"
        android:layout_below="@id/tv_name_already"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/coupon_date_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="2016.5.4-2016.10.5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@id/enough_money_can_use_already"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
