                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="180dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@mipmap/pasu" />

