<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/iv_back_idCard"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="身份证信息"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/tv_name_idCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="姓       名"
                android:textSize="17sp" />

            <EditText
                android:singleLine="true"
                android:id="@+id/et_idCard_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_name_idCard"
                android:background="@null"
                android:hint="请输入姓名"
                android:textColorHint="#fbebe6" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:background="#fbebe6" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_id_idCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="身份证号"
                android:textSize="17sp" />

            <EditText
                android:singleLine="true"
                android:id="@+id/et_idCard_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_id_idCard"
                android:background="@null"
                android:hint="请输身份证号"
                android:textColorHint="#fbebe6" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:background="#fbebe6" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <RelativeLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_titles_face_idCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="身份证正面" />

                <ImageView
                    android:id="@+id/iv_card_face_idCard"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/tv_titles_face_idCard"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zhaoxiangji" />

                <TextView
                    android:id="@+id/tv_titles_opposite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_card_face_idCard"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="身份证反面" />


                <ImageView
                    android:id="@+id/iv_card_opposite_idCard"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/tv_titles_opposite"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zhaoxiangji" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tv_titles_ex_idCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="示例" />

                <ImageView
                    android:id="@+id/iv_ex_opposite_idCard"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/tv_titles_ex_idCard"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/shenfenzhengz" />

                <TextView
                    android:id="@+id/tv_titles_opposite_ex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_ex_opposite_idCard"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="示例" />


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/tv_titles_opposite_ex"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/shenfenzhengf" />

            </RelativeLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btn_idCard_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_all_red"
            android:text="确认上传身份证"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            android:src="@mipmap/id0" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            android:src="@mipmap/id1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            android:src="@mipmap/id2" />

    </LinearLayout>
</ScrollView>