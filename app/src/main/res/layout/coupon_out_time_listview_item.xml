<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/coupon_out_time_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:src="@mipmap/yiguoqi" />

    <TextView
        android:id="@+id/coupon_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="31dp"
        android:text="100"
        android:textColor="#b2b1b1"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/all_things_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:layout_marginTop="33dp"
        android:text="全类商品"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/enough_money_can_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/all_things_tv"
        android:layout_marginRight="33dp"
        android:layout_marginTop="8dp"
        android:text="满200元可用"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/coupon_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/enough_money_can_use"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:text="2016.5.4-2016.10.5"
        android:textSize="12sp" />

</RelativeLayout>
