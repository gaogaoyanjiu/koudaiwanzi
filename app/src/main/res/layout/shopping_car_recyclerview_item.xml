<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="5dp"
    android:background="#ffffff">

    <CheckBox
        android:id="@+id/shopping_car_checkbox_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp"
        android:checked="false" />

    <ImageView
        android:id="@+id/shopping_car_recyclerview_item_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/shopping_car_checkbox_item"
        android:background="@drawable/shape_gray_blank"
        android:src="@mipmap/shopping_car_recyclerview_item" />

    <TextView
        android:id="@+id/shopping_car_recyclerview_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/shopping_car_recyclerview_item_iv"
        android:text="UHA悠哈味觉糖KORORO 100%果汁糖葡萄味"
        android:textColor="#444444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/shopping_car_recyclerview_item_little_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopping_car_recyclerview_item_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxWidth="130dp"
        android:layout_toRightOf="@id/shopping_car_recyclerview_item_iv"
        android:text="尺码/净含量：200kg"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/shopping_car_recyclerview_item_newprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopping_car_recyclerview_item_little_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/shopping_car_recyclerview_item_iv"
        android:text="¥41.9"
        android:textColor="#fe4230"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopping_car_recyclerview_item_little_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/shopping_car_recyclerview_item_newprice"
        android:text="¥54.40"
        android:textSize="13sp" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/shopping_car_recyclerview_item_title"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_gray_blank"
        android:text="+" />

    <Button
        android:id="@+id/number_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/shopping_car_recyclerview_item_title"
        android:layout_marginRight="42dp"
        android:background="@drawable/shape_gray_blank"
        android:text="1" />

    <Button
        android:id="@+id/reduce_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/shopping_car_recyclerview_item_title"
        android:layout_marginRight="72dp"
        android:background="@drawable/shape_gray_blank"
        android:text="-"
        android:textSize="15sp" />

    <View
        android:id="@+id/shopping_car_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/shopping_car_recyclerview_item_iv"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="#d6d6d6" />
    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopping_car_view"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:text="比其他商城共计20元（活动，满减，优惠信息）"
        android:textColor="#f19483"
        android:textSize="13sp" />

</RelativeLayout>
