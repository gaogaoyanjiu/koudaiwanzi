<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_item_order_tag"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/tv_item_order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_order_name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_item_order_tag"
        android:text="" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/tv_item_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_order_type"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_item_order_tag"
        android:text="" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/tv_item_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_item_order_type"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:text="" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/tv_item_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="17sp"
        android:layout_alignTop="@+id/iv_item_order_tag"
        android:layout_toRightOf="@+id/iv_item_order_tag"
        android:layout_toEndOf="@+id/iv_item_order_tag" />

</RelativeLayout>