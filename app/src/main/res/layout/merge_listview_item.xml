<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/mycollection_item_iv1"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/mycollection_item1" />

            <TextView
                android:id="@+id/mycollection_item_tv1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/mycollection_item_iv1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:maxLines="2"
                android:text="COSME DECORTE 黛珂AQ MW 洁颜乳"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/mycollection_item_newprice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mycollection_item_tv1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="¥41"
                android:textColor="#f24e30"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mycollection_item_tv1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/mycollection_item_newprice1"
                android:text="¥54.40"
                android:textSize="12sp" />

            <View
                android:layout_width="38dp"
                android:layout_height="1dp"
                android:layout_below="@id/mycollection_item_tv1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/mycollection_item_newprice1"
                android:background="#8a8a8a" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/mycollection_item_tv1"
                android:layout_marginRight="12dp"
                android:src="@mipmap/mycollection_shopping_car" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/mycollection_item_iv2"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="12dp"
                android:src="@mipmap/mycollection_item2" />

            <TextView
                android:id="@+id/mycollection_item_tv2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/mycollection_item_iv2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:maxLines="2"
                android:text="DICILA 泡沫洗面奶"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/mycollection_item_newprice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mycollection_item_tv2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="¥41"
                android:textColor="#f24e30"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mycollection_item_tv2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/mycollection_item_newprice2"
                android:text="¥54.40"
                android:textSize="12sp" />

            <View
                android:layout_width="38dp"
                android:layout_height="1dp"
                android:layout_below="@id/mycollection_item_tv2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@id/mycollection_item_newprice2"
                android:background="#8a8a8a" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/mycollection_item_tv2"
                android:layout_marginRight="12dp"
                android:src="@mipmap/mycollection_shopping_car" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d6d6"
        android:layout_marginTop="10dp"/>

</LinearLayout>
