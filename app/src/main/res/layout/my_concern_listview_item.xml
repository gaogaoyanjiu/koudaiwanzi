<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp">

        <ImageView
            android:id="@+id/my_concern_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/touxiang_lit" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/my_concern_head"
            android:text="昵称 : "
            android:textColor="#444444"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/concern_notAttention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_attention"
            android:text="取消关注"
            android:textColor="#FF8C69"
             />
        <!--<TextView-->
            <!--android:id="@+id/already_concern_tv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="12dp"-->
            <!--android:background="@drawable/shape_black_concern"-->
            <!--android:padding="3dp"-->
            <!--android:text="已关注"-->
            <!--android:textColor="#444444"-->
            <!--android:textSize="13sp" />-->

        <TextView
            android:id="@+id/fans_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/my_concern_head"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="200个丸子说，30000个粉丝"
            android:textColor="#444444"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>
