<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <VideoView
                        android:id="@+id/videoView_meat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/playVideo_meat"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center" />

                    <!--android:src="@mipmap/action"-->
                    <ImageView
                        android:id="@+id/playVideoCenter_meat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <ImageView
                        android:id="@+id/playVideo1_meat"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/action" />


                    <ProgressBar
                        android:id="@+id/pb_waiting"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/progress_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="180dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@mipmap/pasu" />

                </FrameLayout>

                <RelativeLayout
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="95dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/details_two_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp" />

                    <TextView
                        android:id="@+id/details_two_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/details_two_head"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="视频用户名"
                        android:textColor="#444444"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/details_two_note"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="38dp"
                        android:layout_toRightOf="@id/details_two_head"
                        android:ellipsize="end"
                        android:lineSpacingMultiplier="1.5"
                        android:maxLines="2"
                        android:text="视频用户添加内容视频用户添加内容视频用户添加内容" />

                    <TextView
                        android:id="@+id/ball_details_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/shape_attention"
                        android:text="+ 关注"
                        android:textColor="#FF8C69" />

                    <TextView
                        android:id="@+id/ball_details_notAttention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/shape_attention"
                        android:text="+已关注"
                        android:textColor="#FF8C69"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/ball_details_notAttention"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="5dp"
                        android:text="2016-05-30"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#d6d6d6" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@mipmap/recommend">
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/mycollection_item_iv1"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp" />

                        <TextView
                            android:id="@+id/mycollection_item_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mycollection_item_iv1"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:lineSpacingMultiplier="1.5"
                            android:maxLines="2"

                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/mycollection_item_newprice1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mycollection_item_iv1"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="60dp"

                            android:textColor="#f24e30"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_meatBall_price_old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mycollection_item_iv1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="63dp"
                            android:layout_toRightOf="@id/mycollection_item_newprice1"

                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/mycollection_item_iv2"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="12dp" />

                        <TextView
                            android:id="@+id/mycollection_item_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mycollection_item_iv2"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:lineSpacingMultiplier="1.5"
                            android:maxLines="2"

                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/mycollection_item_newprice2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mycollection_item_iv2"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="60dp"

                            android:textColor="#f24e30"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_meatBall_price_old_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mycollection_item_iv2"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="63dp"
                            android:layout_toRightOf="@id/mycollection_item_newprice2"

                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/mycollection_item_iv3"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:id="@+id/mycollection_item_tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mycollection_item_iv3"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:lineSpacingMultiplier="1.5"
                            android:maxLines="2"

                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/mycollection_item_newprice3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mycollection_item_iv3"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="60dp"

                            android:textColor="#f24e30"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_meatBall_price_old_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mycollection_item_iv3"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="63dp"
                            android:layout_toRightOf="@id/mycollection_item_newprice3"

                            android:textSize="12sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <!--<HorizontalScrollView-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="70dp"-->
                    <!--android:layout_weight="5">-->

                    <!--<LinearLayout-->
                    <!--android:id="@+id/ll_head_v"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent">-->

                    <!--</LinearLayout>-->

                    <!--</HorizontalScrollView>-->

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/zan_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:text="279"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/zan_count"
                            android:src="@mipmap/zan" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/ball_details_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:background="#d6d6d6" />

                    <LinearLayout
                        android:id="@+id/ll_ball_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#d6d6d6" />

        <EditText
            android:id="@+id/ball_details_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="   添加一条评论吧"
            android:textColorHint="#d5d5d5" />

        <TextView
            android:id="@+id/tv_ball_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_all_red"
            android:text="提交评论"
            android:textColor="#ffffff" />

    </RelativeLayout>

</LinearLayout>
