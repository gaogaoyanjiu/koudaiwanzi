<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_width="70dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/huiseyuan"
            android:id="@+id/iv_ems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_above="@+id/iv_ems"
            android:layout_centerHorizontal="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d6d6d6" />

         <View
            android:layout_below="@+id/iv_ems"
            android:layout_centerHorizontal="true"
            android:layout_width="1dp"
            android:layout_height="70dp"
            android:background="#d6d6d6" />

    </RelativeLayout>

    <TextView
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_ems_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="30dp"
        android:text="到达大连"
        android:textSize="15sp" />

    <TextView
        android:layout_marginRight="35dp"
        android:background="#ffffff"
        android:id="@+id/tv_ems_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ems_add"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:text="2016-09-29 00:05:00"
        android:textSize="15sp" />

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_ems_time"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="#d6d6d6" />

</RelativeLayout>