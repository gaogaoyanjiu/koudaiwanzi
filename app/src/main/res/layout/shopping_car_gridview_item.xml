<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="190dp">

        <ImageView
            android:id="@+id/shopping_car_gridview_iv"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/shopping_car_gridview_iv" />

        <TextView
            android:id="@+id/shopping_car_gridview_newprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopping_car_gridview_iv"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:text="¥59"
            android:textColor="#f24e30"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/shopping_car_gridview_oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopping_car_gridview_newprice"
            android:layout_marginLeft="12dp"
            android:text="¥54.40"
            android:textSize="13sp" />

        <View
            android:layout_width="45dp"
            android:layout_height="1dp"
            android:layout_below="@id/shopping_car_gridview_newprice"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:background="#777777" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/shopping_car_gridview_iv"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/mycollection_shopping_car" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopping_car_gridview_oldprice"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="日本零食 木村熊本县Kumamon熊本熊甜..."
            android:textColor="#444444"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>
