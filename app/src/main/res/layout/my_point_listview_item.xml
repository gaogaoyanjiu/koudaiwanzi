<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="270dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/mycollection_item_iv1"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/mycollection_item1" />

            <TextView
                android:id="@+id/mycollection_item_tv1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/mycollection_item_iv1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="COSME DECORTE 黛珂洗颜乳"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mycollection_item_tv1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="140"
                android:textColor="#f596aa"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/score1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mycollection_item_tv1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/score1"
                android:text="积分"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(兑换后支付25元邮费)"
                android:layout_below="@id/score1"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="25dp"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/mycollection_item_iv2"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="12dp"
                android:src="@mipmap/mycollection_item2" />

            <TextView
                android:id="@+id/mycollection_item_tv2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/mycollection_item_iv2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="UTENA佑天兰 超保湿嫩透白水"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/mycollection_item_newprice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mycollection_item_tv2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="30"
                android:textColor="#f596aa"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mycollection_item_tv2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/mycollection_item_newprice2"
                android:text="积分"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d6d6"
        android:layout_marginTop="10dp"/>

</LinearLayout>
