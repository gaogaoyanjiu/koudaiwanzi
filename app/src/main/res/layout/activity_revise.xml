<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back_revise"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/left" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rala_chose_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/register_image_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/regsterearth" />


        <TextView
            android:id="@+id/tv_chosed_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/register_image_1"
            android:text="中国大陆+86"
            android:textColor="#353535"
            android:textSize="14sp" />


        <ImageView


            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/right" />


    </RelativeLayout>


    <View

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="8dp"
        android:background="#dbdbdb" />

    <RelativeLayout
        android:id="@+id/rala_chose_country2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/register_image_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/regsterperson" />


        <EditText
            android:id="@+id/register_edit_number"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/register_image_2"
            android:background="@null"
            android:hint="手机号"
            android:textColor="#353535"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="4dp"
        android:background="#dbdbdb" />


    <RelativeLayout
        android:id="@+id/rala_chose_country3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/register_image_3"
            android:layout_width="25dp"

            android:layout_height="25dp"
            android:background="@mipmap/regsterlock" />

        <EditText
            android:digits="@string/register_name_digits"
            android:id="@+id/register_edit_pwd"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/register_image_3"
            android:background="@null"
            android:hint="新密码"
            android:textColor="#353535"
            android:textSize="14sp" />


    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="4dp"
        android:background="#dbdbdb" />


    <RelativeLayout
        android:id="@+id/rala_chose_country4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/register_image_4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/regsterlock" />

        <EditText
            android:digits="@string/register_name_digits"
            android:id="@+id/secondPassword"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/register_image_4"
            android:background="@null"
            android:hint="确认新密码"
            android:textColor="#353535"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="4dp"
        android:background="#dbdbdb" />

    <RelativeLayout
        android:id="@+id/rala_chose_country5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/register_image_5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@mipmap/regsterfile" />

        <EditText
            android:id="@+id/register_edit_yzm"
            style="?android:attr/textViewStyle"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/register_image_5"
            android:background="@null"
            android:hint="验证码"
            android:textColor="#353535"
            android:textSize="14sp" />

        <Button
            android:id="@+id/register_btn_code"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_regster_red"
            android:text="获取验证码"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <Button
            android:textColor="@android:color/white"
            android:id="@+id/btn_s"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_regster_gray"
            android:text="60s"
            android:textSize="15sp"
            android:visibility="gone" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="4dp"
        android:background="#dbdbdb" />


    <Button
        android:id="@+id/register_btn_register"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/register_btn_code"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_regster_red"
        android:text="确定"
        android:textColor="#FFFFFF" />


</LinearLayout>