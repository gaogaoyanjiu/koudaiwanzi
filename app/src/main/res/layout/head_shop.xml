<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/sp_rl_store"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:drawableLeft="@mipmap/wanzicangku"
            android:text=" 丸子仓库"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/shopping_car_orange_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/orange_right"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_sc_cou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/shopping_car_orange_right"
            android:text="去凑单"
            android:textColor="#f24e30"
            android:textSize="15sp"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>